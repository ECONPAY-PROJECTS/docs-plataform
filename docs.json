          {
            "group": "Início",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Guias",
            "pages": [
              "guides/environments",
              "guides/split-payments",
              "guides/pix-refund",
              "guides/transaction-queries",
              "guides/errors",
              "guides/webhooks"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Autenticação",
            "pages": [
              "api-reference/auth/login",
              "api-reference/auth/profile"
            ]
          },
          {
            "group": "Pagamentos",
            "pages": [
              "api-reference/payments/create-payment",
              "api-reference/payments/refund",
              "api-reference/payments/pix-refund"
            ]
          },
          {
            "group": "Transações",
            "pages": [
              "api-reference/transactions/list",
              "api-reference/transactions/details"
            ]
          },
          {
            "group": "Clientes",
            "pages": [
              "api-reference/customers/list"
            ]
          },
          {
            "group": "Saldos",
            "pages": [
              "api-reference/balance/get-balance"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/overview",
              "api-reference/webhooks/manage"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.econpay.com.br",
          "icon": "chart-line"
        },
        {
          "anchor": "Suporte",
          "href": "mailto:suporte@econpay.com.br",
          "icon": "headset"
        }
      ]
    }
  },
  "api": {
    "baseUrl": [
      "https://api.econpay.com.br",
      "https://sandbox-api.econpay.com.br"
    ],
    "auth": {
      "method": "bearer"
    }
  },
  "logo": {
    "light": "/logo/logo-econpay-large.svg",
    "dark": "/logo/logo-econpay-large.svg",
    "href": "https://econpay.com.br"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@econpay.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Acessar Dashboard",
      "href": "https://app.econpay.com.br"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "website": "https://econpay.com.br"
    }
  }
}